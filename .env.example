# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-backend-domain.onrender.com

# Database
# Set USE_SQLITE=true to use SQLite locally (e.g. when DATABASE_URL points to Render and is unreachable from your machine)
USE_SQLITE=true
# PostgreSQL connection string (if not set and USE_SQLITE is false, defaults to SQLite)
# Format: postgresql://user:password@host:port/dbname
# Example: postgresql://myuser:mypassword@localhost:5432/mydb
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS Settings
# Comma-separated list of allowed origins
# Example: http://localhost:3000,http://127.0.0.1:3000,https://subtitles-frontend-ix0k.onrender.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://subtitles-frontend-ix0k.onrender.com

# CSRF Trusted Origins (should match CORS origins)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://subtitles-frontend-ix0k.onrender.com
